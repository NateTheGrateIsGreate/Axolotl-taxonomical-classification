class Animalia:

    def __init__(self, name):

        self.name = name

        self.characteristics = "Cellular organization, Heterotrophy, Reproduction, Growth, Development, Movement, Response to stimuli, Homeostasis, Adaptation"

class Chordata(Animalia):

    def __init__(self, name):

        super().__init__(name)

        self.characteristics += ", Notochord, Dorsal hollow nerve cord, Pharyngeal slits, Post-anal tail"

class Amphibians(Chordata):

    def __init__(self, name):

        super().__init__(name)

        self.characteristics += ", Cold-blooded, Vertebrates, Live in water and on land, Lay eggs, Have moist skin, Have gills when young, Have lungs when adult, Have a three-chambered heart, Have a larval stage"

class axolotl(Amphibians):

    def __init__(self, name):

        super().__init__(name)

        self.characteristics += ", Axolotls are carnivorous, have a remarkable ability to regenerate lost or damaged tissues and organs, have gills, related to salamanders"


